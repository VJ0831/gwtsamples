<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="style" type="com.feature.chart.client.styles.Resources"></ui:with>
	<g:DockLayoutPanel unit='EM' styleName="{style.styleCss.menu}">
		<g:north size='10'>
			<g:HTML>
				<div align="center" id="header">
					<p class="special">Charts Sample.</p>
					<hr width="90%" align="center" />
				</div>
			</g:HTML>
		</g:north>
		<g:center>
			<g:DockLayoutPanel styleName="{style.styleCss.inner}">
				<g:west size='240' unit='EM'>
					<g:HTMLPanel styleName="{style.styleCss.buttonsPanel}">
						&nbsp;&nbsp;&nbsp;Click to view
						<br />
						<div id="buttons">
							<g:Button ui:field="pieBtn">Pie Chart</g:Button>
							<hr class="h100" />
							<g:Button ui:field="barBtn">Bar Chart</g:Button>
							<hr class="h100" />
							<g:Button ui:field="bubbleBtn">Bubble Chart</g:Button>
							<hr class="h100" />
							<g:Button ui:field="clmBtn">Column Chart</g:Button>
							<hr class="h100" />
							<g:Button ui:field="scatterBtn">Scatter Chart</g:Button>
						</div>

					</g:HTMLPanel>
				</g:west>
				<g:center>
					<g:SimpleLayoutPanel ui:field="layoutPanel" />
				</g:center>

			</g:DockLayoutPanel>
		</g:center>
		<g:south size='10'>
			<g:HTML width="100%">
				<div align="center" id="footer">
					<hr width="90%" align="center" />
					<p>Copyright Â© 2012 Vijay. All Rights Reserved.</p>
				</div>
			</g:HTML>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 